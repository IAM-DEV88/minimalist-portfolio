---
import Section from "../Section.astro";
import { skills } from "@cv";
---

<Section title="Habilidades">
    <ul>
  {
      skills.map(({ name }) => (
          <li>
            <span>{name}</span>
            </li>
            ))
        }
        </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  li {
    border-radius: 6px;
    color: #000;
    padding: .3rem .6rem;
    font-size: .8rem;
    font-weight: 500;
    background: #eee;
    flex-wrap: wrap;
  }
</style>
