---
import Section from "../Section.astro";

import { projects } from "@cv";
---

<Section title="Mis proyectos">
  <ul>
    {
      projects.map(({ url, name, description, highlights }) => {
        return (
          <li>
            <article>
              <header>
                <a href={url} title={`Proyecto ${name}`} target="_blank"
              rel="noopener noreferrer">
                  <h3>{name}</h3>
                </a>
              </header>
              <p>{description}</p>
              <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>;
                  })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
    
    ul{
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(200px, 1fr));
        gap: 1rem;
    }
    article{
        border-radius: 8px;
        border: 1px solid #eee;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }
    article h3{
        margin-bottom: 4px;
    }
    article p{
        flex: 1;
    }
    article a{
        color:#333;
    }
    article a:hover{
        text-decoration: underline;
    }
    footer{
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: .7rem;
        padding-top: 6px;
    }
    footer span{
        font-weight: 500;
        padding: .2rem .5rem;
        color: #444;
        background: #eee;
        display: inline-flex;
        border-radius: 6px;
    }
</style>